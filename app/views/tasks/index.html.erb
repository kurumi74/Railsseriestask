<h1>ツイート一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.content %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "ツイートを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'ツイートを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
<% end %>
</table>
<%= link_to 'ツイートする', new_task_path %>